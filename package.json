{
  "name": "@netology-group/wc-chat",
  "version": "0.8.0",
  "description": "Messenger's webcomponents",
  "homepage": "https://github.com/netology-group/wc-chat",
  "bugs": {
    "url": "https://github.com/netology-group/wc-chat/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/netology-group/wc-chat.git"
  },
  "license": "MIT",
  "author": "",
  "files": [
    "dist",
    "es"
  ],
  "main": "dist/chat.min.js",
  "module": "es/index.js",
  "directories": {
    "lib": "src"
  },
  "scripts": {
    "prebuild": "rm -rf dist es public/node_modules",
    "build": "npm run build/es && npm run build/umd && npm run build/umd/min",
    "build/es": "cross-env BABEL_ENV=es babel src -d es --copy-files",
    "build/umd": "npm run rollup -- -o dist/chat.js",
    "build/umd/min": "cross-env NODE_ENV=production npm run rollup -- -o dist/chat.min.js",
    "demo": "http-server .",
    "prepublishOnly": "npm run test && npm run build",
    "rollup": "cross-env BABEL_ENV=rollup rollup -c",
    "prestart": "npm run build",
    "start": "npm run demo",
    "stylelint": "stylelint src",
    "test": "eslint . && npm run stylelint"
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard"
    ],
    "plugins": [
      "stylelint-order"
    ],
    "rules": {
      "order/order": [
        "dollar-variables",
        "custom-properties",
        "at-variables",
        "declarations",
        "rules",
        "at-rules"
      ],
      "order/properties-alphabetical-order": false
    }
  },
  "dependencies": {
    "@netology-group/wc-reaction": "^0.2.0",
    "@netology-group/wc-utils": "^0.3.2",
    "@polymer/iron-autogrow-textarea": "^3.0.0-pre.21",
    "@polymer/lit-element": "^0.5.2",
    "@webcomponents/webcomponentsjs": "^2.2.7",
    "core-js": "^2.5.7",
    "debug": "^4.1.0",
    "intl-messageformat": "~2.2.0",
    "invariant": "^2.2.4",
    "lit-html": "^0.10.2",
    "markdown-it": "^8.4.2",
    "most": "^1.7.3",
    "ramda": "^0.25.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-annotate-pure-calls": "^0.3.0",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-transform-inline-environment-variables": "^0.4.3",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "eslint-config-adequate": "^1.1.4",
    "postcss-discard-duplicates": "^4.0.2",
    "postcss-fontpath": "^1.0.0",
    "postcss-import": "^12.0.0",
    "postcss-preset-env": "^6.6.0",
    "postcss-url": "^8.0.0",
    "rollup": "^1.2.2",
    "rollup-plugin-babel": "^3.0.7",
    "rollup-plugin-commonjs": "^9.2.1",
    "rollup-plugin-copy": "^0.2.3",
    "rollup-plugin-json": "^3.1.0",
    "rollup-plugin-node-resolve": "^4.0.1",
    "rollup-plugin-postcss": "^2.0.3",
    "rollup-plugin-svg": "^1.0.1",
    "rollup-plugin-terser": "^4.0.4",
    "stylelint": "^9.10.1",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-order": "^1.0.0"
  },
  "peerDependencies": {
    "@webcomponents/webcomponentsjs": "^2.2.7",
    "core-js": "^2.5",
    "intl-messageformat": "~2.2.0",
    "markdown-it": "^8.4"
  },
  "optionalDependencies": {
    "chokidar-cli": "^1.2.2",
    "cross-env": "^5.2.0"
  }
}
